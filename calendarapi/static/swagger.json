                                                "main_page_photo_path": {
                                                    "type": "string",
                                                    "description": "Path to the main page photo",
                                                    "minLength": 2,
                                                    "maxLength": 300
                                                }
                                            },
                                            "required": [
                                                "main_page_description",
                                                "main_page_photo_path"
                                            ],
                                            "type": "object"
                                        },
                                        "hero": {
                                            "properties": {
                                                "left_text": {
                                                    "type": "string",
                                                    "description": "Text on the left side of the hero block",
                                                    "minLength": 2,
                                                    "maxLength": 200
                                                },
                                                "right_text": {
                                                    "type": "string",
                                                    "description": "Text on the right side of the hero block",
                                                    "minLength": 2,
                                                    "maxLength": 200
